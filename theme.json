{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,

    "settings": {
        "lightbox": {
            "allowEditing": true,
            "enabled": true
        },
        "blocks": {
            "core/image": {
                "lightbox": {
                    "allowEditing": true
                }
            }
        }
    },

    "customTemplates": [
        {
            "name": "blank",
            "postTypes": ["page", "post"],
            "title": "Blank"
        },
        {
            "name": "blog-alternative",
            "postTypes": ["page"],
            "title": "Blog (Alternative)"
        },
        {
            "name": "404",
            "postTypes": ["page"],
            "title": "404"
        }
    ]
}
